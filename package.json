{
  "name": "momentum",
  "version": "1.0.0",
  "author": "MD Enamul Haque (Zoom IT)",
  "main": "main.js",
  "scripts": {
    "start": "npm run build-react && electron .",
    "dev": "concurrently \"npm:dev-server\" \"npm:dev-electron\"",
    "dev-server": "webpack serve --hot",
    "dev-electron": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "build-react": "webpack --mode production --config webpack.config.js",
    "build": "npm run build-react && electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "axios": "^1.12.0",
    "chart.js": "^4.4.3",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.4",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "screenshot-desktop": "^1.15.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.5",
    "@babel/preset-env": "^7.25.5",
    "@babel/preset-react": "^7.24.7",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2",
    "file-loader": "^6.2.0"
  },
  "build": {
    "appId": "com.zoomit.momentum",
    "productName": "Momentum",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      ".env"
    ],
    "extraResources": [
      {
        "from": "icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": null
    },
    "mac": {
      "target": "dmg",
      "notarize": false
    },
    "cscLink": null
  }
}
